{
    "name": "react-repick",
    "version": "0.0.1",
    "description": "A collection of React pickers.",
    "keywords": [
        "react",
        "datepicker",
        "calendar",
        "timepicker",
        "time",
        "date",
        "pick",
        "pickers",
        "timepickers",
        "datepickers",
        "react-datepicker",
        "react-calendar",
        "react-timepicker",
        "react-time",
        "react-date",
        "react-pick",
        "react-pickers",
        "react-timepickers",
        "react-datepickers"
    ],
    "homepage": "https://github.com/dirheimerb/react-repick/blob/main/README.md",
    "bugs": {
        "url": "https://github.com/dirheimerb/react-repick/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/dirheimerb/react-repick.git"
    },
    "license": "MIT",
    "author": "Bradley Dirheimer",
    "type": "module",
    "exports": {
        ".": {
            "import": "./src/index.ts",
            "require": "./dist/index.js"
        },        
        "./src/*": "./src/*"
    },
    "main": "dist/index.js",
    "module": "dist/index.es.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "esbuild src/index.ts --bundle --format=esm --outfile=dist/index.es.js --sourcemap",
        "format": "prettier --write .",
        "types": "tsc --emitDeclarationOnly",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
    },
    "prettier": {
        "arrowParens": "always",
        "endOfLine": "auto",
        "plugins": [
            "prettier-plugin-packagejson",
            "prettier-plugin-tailwindcss"
        ],
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "all"
    },
    "dependencies": {
        "date-fns": "^3.6.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1"
    },
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.7",
        "@tailwindcss/typography": "^0.5.13",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@types/uuid": "^9.0.8",
        "@typescript-eslint/eslint-plugin": "^7.11.0",
        "@typescript-eslint/parser": "^7.11.0",
        "autoprefixer": "^10.4.19",
        "clsx": "^2.1.1",
        "esbuild": "^0.21.4",
        "eslint": "^9.3.0",
        "eslint-plugin-react-hooks": "^4.6.2",
        "eslint-plugin-react-refresh": "^0.4.7",
        "postcss": "^8.4.38",
        "prettier": "^3.2.5",
        "prettier-plugin-packagejson": "^2.5.0",
        "prettier-plugin-tailwindcss": "^0.5.14",
        "tailwindcss": "^3.4.3",
        "tslib": "^2.6.2",
        "tsx": "^4.11.0",
        "typescript": "^5.4.5"
    },
    "packageManager": "pnpm@9.1.2+sha256.19c17528f9ca20bd442e4ca42f00f1b9808a9cb419383cd04ba32ef19322aba7"
}
